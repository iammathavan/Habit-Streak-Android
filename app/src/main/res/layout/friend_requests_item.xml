<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/requestCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:backgroundTint="@color/background"
    >

    <LinearLayout
        android:id="@+id/requestsCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/roundstyle_opp"
        android:padding="16dp"
        android:layout_margin="8dp"
        >


        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="10dp"
            android:layout_gravity="center"
            android:text="wagnbfsbz dafbabaeaebbjzb josvaojgargjwjsv"
            android:textColor="@color/background"
            android:textSize="18sp"
            android:paddingEnd="16dp"
            android:textStyle="bold" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/roundstyle_btn_50"
                android:padding="12dp"
                android:text="Accept ✔"
                android:textSize="16sp"
                android:textColor="@color/background" />

            <Button
                android:id="@+id/btnReject"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:background="@drawable/roundstyle_btn_opp"
                android:padding="12dp"
                android:text="Reject ✖"
                android:textSize="16sp"
                android:textColor="@color/background" />


        </LinearLayout>
        
    </LinearLayout>

</androidx.cardview.widget.CardView>