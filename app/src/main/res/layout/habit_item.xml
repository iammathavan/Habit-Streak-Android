<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:backgroundTint="@color/orange"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/roundstyle"
        android:padding="16dp"
        android:layout_margin="8dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.82"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewHabitName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="Habit Name" />

            <TextView
                android:id="@+id/textViewHabitDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit." />

            <!-- Score layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/checkBoxCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:foregroundTint="@color/darkgreen"
                    android:layout_weight="1"
                    android:text="Completion" />

                <TextView
                    android:id="@+id/textViewScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: 0"
                    android:layout_toRightOf="@id/checkBoxCompleted"
                    android:layout_weight="1"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/deleteHabitBtn"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:paddingLeft="45dp"
                    android:layout_toRightOf="@id/textViewScore"
                    android:background="@drawable/trash"
                    android:layout_marginRight="5dp"
                    />


            </LinearLayout>
        </LinearLayout>

        <!-- Second layout taking up 20-25% width -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.18"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageViewStreak"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:src="@drawable/fire"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/textViewStreakScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Streak: 0"
                android:paddingTop="7dp"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>