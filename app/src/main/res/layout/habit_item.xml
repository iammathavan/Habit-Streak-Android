<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/habitCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:backgroundTint="@color/background"
    >

    <LinearLayout
        android:id="@+id/Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/roundstyle"
        android:padding="16dp"
        android:layout_margin="8dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.82"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewHabitName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="Habit Name"
                android:textColor="@color/background"
                />

            <TextView
                android:id="@+id/textViewHabitDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/background"
                android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/checkBoxCompleted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:button="@drawable/checkbox_selector"
                    android:textColor="@color/background" />

                <TextView
                    android:id="@+id/textViewCompletion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completion"
                    android:layout_toRightOf="@id/checkBoxCompleted"
                    android:layout_weight="1"
                    android:textColor="@color/background"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textViewScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score: 0"
                    android:layout_toRightOf="@id/textViewCompletion"
                    android:layout_weight="1"
                    android:textColor="@color/background"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/deleteHabitBtn"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:paddingLeft="45dp"
                    android:layout_toRightOf="@id/textViewScore"
                    android:background="@drawable/trash"
                    android:layout_marginRight="5dp"
                    />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.18"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageViewStreak"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:src="@drawable/fire"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/textViewStreakScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="0"
                android:paddingTop="7dp"
                android:textColor="@color/background"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>